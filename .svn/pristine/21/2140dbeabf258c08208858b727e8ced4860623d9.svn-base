- (void)createMainView
{
    h_tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, 0, self.view.bounds.size.width, self.view.bounds.size.height-64-49) style:UITableViewStylePlain];
    h_tableView.delegate = self;
